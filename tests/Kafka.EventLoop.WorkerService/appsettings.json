{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "TestSettings": {
    "ConnectionString": "",
    "FooTopic": "foo-topic",
    "FooTopicPartitionCount": 10,
    "BarTopic": "bar-topic",
    "BarTopicPartitionCount": 10,
    "BarDeadLettersTopic": "bar-dead-letters-topic",
    "BarDeadLettersTopicPartitionCount": 1,
    "FooOneToOneStreamingTopic": "foo-one-to-one-streaming-topic",
    "FooOneToOneStreamingTopicPartitionCount": 10
  },
  "Kafka": {
    "ConsumerGroups": [
      {
        "GroupId": "foo-group",
        "ConnectionString": "",
        "TopicName": "foo-topic",
        "ParallelConsumers": 1,
        "Intake": {
          "MaxSpeed": 10
        },
        "Streaming": {
          "ConnectionString": "",
          "TopicName": "foo-one-to-one-streaming-topic",
          "AckLevel": "AllInSyncReplicas"
        },
        "ErrorHandling": {
          "Critical": {
            "StopConsumer": true
          },
          "Transient": {
            "RestartConsumerAfterMs": 5000
          }
        }
      },
      {
        "GroupId": "bar-group",
        "ConnectionString": "",
        "TopicName": "bar-topic",
        "ParallelConsumers": 1,
        "Intake": {
          "MaxSpeed": 50,
          "Strategy": {
            "Name": "FixedSize",
            "Size": 10
          }
        },
        "ErrorHandling": {
          "Critical": {
            "DeadLettering": {
              "ConnectionString": "",
              "TopicName": "bar-dead-letters-topic",
              "OnDeadLetteringFailed": "RestartConsumer"
            }
          },
          "Transient": {
            "RestartConsumerAfterMs": 5000
          }
        }
      },
      {
        "GroupId": "bar-dead-letters-group",
        "ConnectionString": "",
        "TopicName": "bar-dead-letters-topic",
        "ParallelConsumers": 1,
        "Intake": {
          "MaxSpeed": 1,
          "Strategy": {
            "Name": "FixedSize",
            "Size": 1
          }
        },
        "ErrorHandling": {
          "Critical": {
            "StopConsumer": true
          },
          "Transient": {
            "RestartConsumerAfterMs": 5000
          }
        }
      },
      {
        "GroupId": "foo-one-to-one-streaming-group",
        "ConnectionString": "",
        "TopicName": "foo-one-to-one-streaming-topic",
        "ParallelConsumers": 1,
        "Intake": {
          "MaxSpeed": 100,
          "Strategy": {
            "Name": "FixedSize",
            "Size": 10
          }
        },
        "ErrorHandling": {
          "Critical": {
            "StopConsumer": true
          },
          "Transient": {
            "RestartConsumerAfterMs": 5000
          }
        }
      }
    ]
  }
}
